<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- 部门表 -->
		<mapping class="com.ms.rbac.entity.Group" />
		<!-- 用户表 -->
		<mapping class="com.ms.rbac.entity.User" />
		<!-- 角色表 -->
		<mapping class="com.ms.rbac.entity.Role" />
		<!-- 用户角色表 -->
		<mapping class="com.ms.rbac.entity.UserRole" />
		<!-- 菜单表 -->
		<mapping class="com.ms.rbac.entity.Menu" />
		<!-- 许可表 -->
		<mapping class="com.ms.rbac.entity.Permission" />
		<!-- 资源表 -->
		<mapping class="com.ms.rbac.entity.Resource" />
		<!-- 角色许可表 -->
		<mapping class="com.ms.rbac.entity.RolePermission" />
		
	</session-factory>
</hibernate-configuration>