<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd" [
<!ENTITY contextInclude SYSTEM "org/springframework/web/context/WEB-INF/contextInclude.xml">
]>

<beans>
	<!-- 数据源 -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<!-- mysql -->
		<property name="driverClassName" value="org.gjt.mm.mysql.Driver"></property>
		<property name="url" value="jdbc:mysql://127.0.0.1:3306/glxt"></property>
		<!-- oracle -->
		<!-- <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/> 
			<property name="url" value="jdbc:oracle:thin:@localhost:1521:ORCL"/> -->
		<property name="username" value="glzp"></property>
		<property name="password" value="glzp"></property>
	</bean>

	<!-- session工厂 --> 
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<!-- 元数据 -->
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties">
			<props>
				<!-- mysql方言 -->
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<!-- oracle 10g方言 -->
				<!-- <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop> -->
				<!-- 自动更新表结构 -->
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<!-- 控制台打印sql -->
				<prop key="hibernate.show_sql">true</prop>
				<!-- sql语句格式化 -->
				<prop key="hiberante.format_sql">true</prop>

			</props>
		</property>
		<!-- 配置文件 -->
		<property name="configLocations">
			<list>
				<!-- rabc包hibernate实体配置 -->
				<value>
					classpath*:com/ms/rbac/config/hibernate.cfg.rbac.xml
				</value>
			</list>
		</property>
	</bean>

	<!-- 事务控制 -->
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>

	<bean id="transactionBese"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		lazy-init="true" abstract="true">
		<property name="transactionManager" ref="transactionManager"></property>
		<property name="transactionAttributes">
			<props>
				<!-- 方法名称 -->
				<prop key="add*">PROPAGATION_REQUIRED,-Exception</prop>
				<prop key="save*">PROPAGATION_REQUIRED,-Exception</prop>
				<prop key="update*">PROPAGATION_REQUIRED,-Exception</prop>
				<prop key="insert*">PROPAGATION_REQUIRED,-Exception</prop>
				<prop key="modify*">PROPAGATION_REQUIRED,-Exception</prop>
				<prop key="delete*">PROPAGATION_REQUIRED,-Exception</prop>
				<prop key="get*">PROPAGATION_NEVER</prop>
			</props>
		</property>
	</bean>
</beans>